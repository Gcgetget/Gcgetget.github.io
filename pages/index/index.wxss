/* index.wxss */
.wxSearch{
  position: absolute;
  top: 43px;
  left:0;
  width:100%;
  height:100%;
  border-top: 1px #eee solid;
  background-color: rgba(0, 0, 0, 0.2);
}
.wxSearch-section{
  background-color: #fff;
  padding: 5px 10px;
  border: 1px #eee solid;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
}
.wxSearch-input{
  flex: 7; 
  background-color: #eee;
  padding: 5px 10px;
}

.wxSearch-button{
  flex: 1;
  border: none !important;
}
.search-item{
  padding: 10px 10px;
  
}
.wp-sort{
  padding: 10px 10px;
  /* border-top: 1px #eee solid; */
  
}
.wp-date{
  padding: 10px 10px;
  border-top: 1px #eee solid;
  
}
.wp-address{
  padding: 10px 10px;
  border-top: 1px #eee solid;
  border-bottom: 1px #eee solid;
  
}

.container{
  display: block;
  /* border-top: 1px #eee solid; */
  height: 100%;
  position: flex;
  flex-direction: column;
  padding: 20rpx;
}
.view-show{
  display: block;
}
.view-hide{
  display: none;
}
navigator{
  overflow: hidden;
}

.list{
  position: relative;
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1px #eee solid;
 }
 
.imgs{
  text-align: center; 
  float: left;
  width: 40%;
  height: 200rpx;
}
.in-img{
   height: 200rpx;
   width: 90%;
}
.infos{
  font-size: 14px;
  width: 60%;
  float: left;
  height: 200rpx;
  position: flex;
  flex-direction: column;

}
.name{
  margin: 10rpx;
}
.place{
  margin: 10rpx;
}
.date{
  margin:10rpx;
}
